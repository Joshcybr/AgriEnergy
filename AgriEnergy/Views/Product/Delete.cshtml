@model AgriEnergy.Models.Product

@{
    ViewBag.Title = "Delete Product";
}

<h2>Are you sure you want to delete the product?</h2>

<div>
    <h3>@Model.Name</h3>
    <p>@Model.Description</p>
    <p><strong>Price: </strong>@Model.Price.ToString("C")</p>
</div>

@using (Html.BeginForm("Delete", "Product", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Cancel</a>
}
