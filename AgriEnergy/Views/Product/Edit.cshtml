@model AgriEnergy.Models.Product

@{
    ViewBag.Title = "Edit Product";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/editPage.css" />
</head>
<body>
    <div class="form-wrapper">
        <form asp-action="Edit" asp-controller="Product" method="post">
            <h2>Edit Product</h2>

            @Html.HiddenFor(m => m.Id)

            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "editor" } })
           

                @Html.LabelFor(m => m.Price)
                @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "editor" } })
           

          
                @Html.LabelFor(m => m.Description)
                @Html.EditorFor(m => m.Description, new { htmlAttributes = new { @class = "editor" } })
            </div>

            <div class="button-group">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a href="@Url.Action("FarmerDashboard", "Dashboard")" class="btn btn-secondary">Cancel</a>

            </div>
        </form>
    </div>
</body>
</html>
