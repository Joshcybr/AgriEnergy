@{
    ViewData["Title"] = "Agri-Energy";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/landingPage.css" />
</head>
<body>
    <header>
        <div class="logo">Agri-Energy Connect</div>
        <nav class="nav-links">
            <a href="#">Home</a>
            <a href="/Account/Login">Login</a>
            <a href="/Account/Register">Sign Up</a>
        </nav>
    </header>

    <section class="features">
        <div class="feature">
            <img src="~/images/Green_tech.jpeg" alt="Green Tech" />
            <h3>Green Tech Access</h3>
            <p>Connect with vetted renewable energy providers to enhance farm productivity and reduce carbon impact.</p>
        </div>
        <div class="feature">
            <img src="~/images/Farming_tools.jpeg" alt="Farmer Tools" />
            <h3>Farmer-Friendly Tools</h3>
            <p>Intuitive dashboards and resources tailored for small-scale and commercial farmers alike.</p>
        </div>
        <div class="feature">
            <img src="~/images/Sus.jpeg" alt="Sustainability" />
            <h3>Sustainability First</h3>
            <p>Contribute to a greener future with scalable energy solutions designed for agriculture.</p>
        </div>
    </section>

    <footer>
        &copy; 2025 Agri-Energy Connect. All rights reserved.
    </footer>
</body>
</html>
